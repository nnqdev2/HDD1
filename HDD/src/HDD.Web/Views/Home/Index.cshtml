@model HDD.Web.ViewModels.IndexViewModel;

@{
    ViewData["Title"] = "Home Page";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb textDetail">
        <li class="breadcrumb-item "><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Check if VIN/Plate is regulated.</li>
    </ol>
</nav>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index"  class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating" >
                <input asp-for="Vin" class="form-control" />
                <label asp-for="Vin" class="form-label"></label>                
                <span asp-validation-for="Vin" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <label class="control-label textDetail">OR</label>
            </div>
            <div class="form-floating" >
                <input asp-for="Plate" class="form-control" />
                <label asp-for="Plate" class="form-label"></label>
                <span asp-validation-for="Plate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Is VIN or Plate Regulated?" class="btn btn-primary" />
                <span class="alert-danger textDetail">@ViewBag.messageerror</span>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="//code.jquery.com/jquery-2.2.4.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">

